FROM python:3.10-slim

WORKDIR /app

# Copy only this service's files and root requirements
COPY services/streaming/ .
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install streaming tools
RUN apt-get update && apt-get install -y liquidsoap icecast2 ffmpeg && apt-get clean

# Copy Liquidsoap script
COPY radio.liq .

# Expose port for Icecast
EXPOSE 8000

# Run Icecast and Liquidsoap
CMD ["sh", "-c", "icecast2 -c /etc/icecast2/icecast.xml & liquidsoap radio.liq"]