FROM python:3.10-slim

WORKDIR /app

# Copy service files and root requirements
COPY services/music_management/ .
COPY requirements.txt .
COPY config.yaml .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install DB and HTTP tools
RUN pip install --no-cache-dir sqlalchemy requests

# Expose port for FastAPI
EXPOSE 8007

# Run the service
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8007"]